<div class="row">
	<div class="col s12 top">
		<a class="waves-effect waves-light btn" href="/">Click to Register</a>
	</div>
</div>
<div class="row">
	<div class="col s6 offset-s6">
	  <% if flash[:error] %>
	   <p class="error"><%= flash[:error] %>
      <% end %>
		<form action="/sessions/login" method="post">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			<div class="input-field col s12">
				<label for="email">Email:</label>
				<input id="email" type="email" name="email">
			</div>
			<div class="input-field col s12">
				<label for="password">Password:</label>
				<input id="password" type="password" name="password">
			</div>
			<div class="input-field col s4 offset-s8">
				<input class="waves-effect waves-light btn" type="submit" value="Login">
			</div>
		</form>
	</div>
</div>